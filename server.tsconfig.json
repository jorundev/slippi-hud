{
    "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "strict": true,
      "allowJs": true,
      "checkJs": false,
      "rootDir": "./src",
      "baseUrl": "./",
      "skipLibCheck": true,
      "outDir": "dist",
      "types": ["node", "express", "@nodecg/types/augment-window"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.js",
      "src/**/*.html"
    ],
    "exclude": [
      "node_modules",
      "src/graphics/**",
      "src/dashboard/**"
    ]
  }
  